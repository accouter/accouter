{
  "name": "accouter",
  "version": "1.0.0",
  "homepage": "https://accouter.dev",
  "description": "",
  "license": "MIT",
  "scripts": {
    "livereload": "browser-sync start --server _site/ --port 8080 --files='_site/*'",
    "build": "npm run build-scss && npm run build-minify",
    "build-scss": "sass --style=expanded --source-map accouter.scss css/accouter.css",
    "build-minify": "postcss css/accouter.css --no-map --use cssnano --output css/accouter.min.css",
    "docfx": "npm-run-all docfx-style docfx-serve",
    "docfx-style": "cpy css/accouter.* templates/accouter/public/ --flat",
    "docfx-serve": "docfx build docfx.json --serve --logLevel error",
    "clean": "rimraf css/",
    "watch": "npm-run-all -p watch-* livereload",
    "watch-scss": "nodemon -w scss/ -x 'npm run build'",
    "watch-style": "nodemon -w css/ -x 'npm run docfx-style'",
    "watch-docfx": "nodemon -w templates/* -w docs/ -w interface/ -w layout/ -x 'npm run docfx-serve'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/accouter/accouter.git"
  },
  "keywords": [
    "css",
    "sass",
    "scss",
    "flexbox",
    "grid",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/accouter/accouter/issues"
  },
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "cpy-cli": "^5.0.0",
    "cssnano": "^6.1.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "sass": "^1.77.2"
  }
}
