{
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "output": "_site",
        "template": [
            "default",
            "modern",
            "accouter"
        ],
        "globalMetadata": {
            "_appName": "accouter",
            "_appTitle": "accouter",
            "_enableSearch": true,
            "pdf": false
        }
    }
}